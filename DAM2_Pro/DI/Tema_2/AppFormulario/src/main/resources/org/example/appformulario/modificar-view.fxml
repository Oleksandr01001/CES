<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.appformulario.Controller.ModificarController"
      spacing="10" alignment="CENTER" prefWidth="360" prefHeight="360">

    <children>
        <Label text="Modificar usuario" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" minWidth="80"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>

            <children>
                <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="tfNombre" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Correo:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="tfMail" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Género:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="tfGenero" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Edad:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="tfEdad" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Localización:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="tfLocalizacion" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            </children>
        </GridPane>

        <HBox spacing="10">
            <Button fx:id="btnGuardar" text="Guardar"/>
            <Button fx:id="btnCancelar" text="Cancelar"/>
        </HBox>
    </children>

    <padding>
        <Insets top="16" right="16" bottom="16" left="16"/>
    </padding>
</VBox>
