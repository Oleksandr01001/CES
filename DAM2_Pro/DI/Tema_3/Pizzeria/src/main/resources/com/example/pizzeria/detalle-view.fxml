<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.pizzeria.controller.DetalleController"
      spacing="10">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label fx:id="labelNombre" text="Nombre: "/>
    <Label fx:id="labelTelefono" text="Teléfono: "/>
    <Label fx:id="labelPizza" text="Pizza: "/>
    <Label fx:id="labelTamano" text="Tamaño: "/>
    <Label fx:id="labelPrecio" text="Precio: "/>
    <Label fx:id="labelServido" text="Servido: "/>

</VBox>
